---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block decoration-slate-950/30 dark:decoration-slate-50/30 hover:decoration-slate-950/50 hover:dark:decoration-slate-50/50 text-current hover:text-slate-950 hover:dark:text-slate-50 transition-colors duration-300 ease-in-out",
    underline && "underline underline-offset-2"
  )}
  {...rest}
>
  <slot />
</a>
